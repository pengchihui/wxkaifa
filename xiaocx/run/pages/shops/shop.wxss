/* pages/shops/shop.wxss */

.box {
  width: 750rpx;
  height: 300rpx;
  border-bottom: 1px solid #ddd;
  position: relative;
  overflow: hidden
}

.box_m {
  width: 120%;
  position: absolute;
  left: 0;
  top: 0;
  height: 300rpx;
}

.box_m image {
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin: 50rpx 20rpx 0 0;
}

.box_m .choose {
  float: left;
  margin: 130rpx 20rpx 0;
}

.box_m .tit {
  font-size: 40rpx;
  margin: 50rpx 0 10rpx;
}

.box_m .pay {
  color: red;
}

.box_m .pay {
  color: red;
  margin-bottom: 20rpx
}

.num view {
  float: left;
  border: 1px solid red;
  width: 25px;
  height: 25px;
  text-align: center;
  line-height: 25px;
}

.num input {
  float: left;
  font-size: 12px;
  border-top: 1px solid red;
  border-bottom: 1px solid red;
  width: 25px;
  height: 25px;
  text-align: center;
}
.money{
  background: rgb(149, 213, 243);
  padding: 20rpx
}
.money view{
   float: right
}
.money .choose{
   float: left;
   margin-right: 40rpx
}
.money .choose icon{
   float: left;
   margin-right: 20rpx
}
.del{
  color: red;
  position: absolute;
  top: 130rpx;
  right: 20%;
}