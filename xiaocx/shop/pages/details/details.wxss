/* pages/details/details.wxss */

swiper image {
  width: 100%;
  height: 350rpx;
  border-bottom: 2rpx solid #666;
}

.details {
  padding: 20rpx;
}

.tit {
  font-size: 50rpx;
}

.pay {
  color: red;
  margin: 20rpx 0;
}

.num input {
  border: 1px solid #ccc;
  float: left;
  margin: 0 20rpx;
  width: 50px;
  height: 30px;
  line-height: 30px;
  text-align: center
}

.num view {
  border: 1px solid #ccc;
  float: left;
  background: none;
  padding: 0 10px;
  height: 30px;
  line-height: 30px;
}

.buy {
  float: right;
  width: 300rpx;
  background: red;
  border-radius: 30rpx;
  text-align: center;
  color: #fff;
  height: 32px;
  line-height: 32px;
}
.dibu .buy{
  background: #fff;
  color: red;
  margin-top: 4px
}
.dibu{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 40px;
  line-height:40px;
  background: red;
  color: #fff;
  padding: 0 20rpx 
}
